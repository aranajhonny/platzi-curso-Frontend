@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181

a
    text-decoration none

body
	font-size 16px
	font-family: 'Varela Round';

figure
	margin 0

//butons

.button-menu
	position absolute
	top 50%
	left .5em
	margin-top -10px

//oocss classes

.container
	padding  1.4rem
	font-size 0
	text-align center

.border-bottom
	border-bottom 1px solid gris_claro

.name
	color gris_oscuro

.menu
	display none

.relative
	position relative

.author
	color gris_claro

.header
	height 3.5em
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:nth-child(even)
		margin-right 0
 	p
		margin .5em 0
